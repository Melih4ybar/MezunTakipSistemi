
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width" />
    <title>Giris</title>
    <link rel="stylesheet" href="~/css/login.css"/>

</head>
<body>
    <div> 
        <section>
            <div class="color"></div>
            <div class="color"></div>
            <div class="color"></div>
